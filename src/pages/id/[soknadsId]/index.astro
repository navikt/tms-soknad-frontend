---
import Layout from '../../../layouts/Layout.astro';
import type { Language } from '../../../language/language';
import Soknad from '@src/components/soknad/Soknad.astro';
import Breadcrumbs from '@src/components/breadcrumbs/Breadcrumbs.astro';

const { soknadsId } = Astro.params;
const language = Astro.currentLocale as Language;
---

<Layout>
  <Breadcrumbs language={language} />
  <Soknad server:defer soknadsId={soknadsId} />
</Layout>
